<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="staff" extends="json-default,struts-default">

        <action name="staffAction_*" class="staffAction" method="{1}">
            <!--显示全部的职员-->
            <result name="showAllStaff">/pages/staff/{1}.jsp</result>

            <!--添加或编辑职员：重定向到职员列表-->
            <result name="addOrEditStaff" type="redirectAction">
                <param name="actionName">staffAction_listStaff</param>
            </result>

            <!--编辑职员跳转页面-->
            <result name="editStaff">/pages/staff/{1}.jsp</result>

            <!--返回职员列表-->
            <result name="returnListStaff" type="redirectAction">
                <param name="actionName">staffAction_listStaff</param>
            </result>

            <!--高级查询-->
            <result name="findStaffWithMsg">/pages/staff/listStaff.jsp</result>

            <!--部门和职务的二级联动-->
            <result name="success" type="json">
                <!--指定需要转化为json数据的数据类型-->
                <param name="root">postList</param>
                <!--需要转为json数据的参数-->
                <param name="includeProperties">
                    \[\d\]\.postID,
                    \[\d\]\.postName
                </param>
            </result>

            <allowed-methods>
                listStaff,findPost,addOrEditStaff,editStaff,returnListStaff,findStaffWithMsg
            </allowed-methods>
        </action>

    </package>

</struts>
