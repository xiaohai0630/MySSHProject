<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="staff" extends="json-default,struts-default">

        <!--声明自定义拦截器-->
        <interceptors>
            <interceptor name="loginCheck" class="com.lanou.login.web.interceptor.Interceptor">

                <!--不验证登录-->
                <param name="excludeMethods">login</param>

            </interceptor>

            <!--声明一个自定义拦截器栈，存放多个拦截器，name属性是给集合取的名字-->
            <interceptor-stack name="myInterceptor">
                <!--自定义的拦截器-->
                <interceptor-ref name="loginCheck"></interceptor-ref>
                <!--struts框架默认的拦截器栈-->
                <interceptor-ref name="defaultStack"></interceptor-ref>
            </interceptor-stack>

        </interceptors>

        <!--默认拦截器-->
        <default-interceptor-ref name="myInterceptor"></default-interceptor-ref>

        <global-results>
            <result name="interceptors">/pages/login.jsp</result>
        </global-results>

        <action name="staffAction_*" class="staffAction" method="{1}">
            <!--显示全部的职员-->
            <result name="showAllStaff">/pages/staff/{1}.jsp</result>

            <!--添加或编辑职员：重定向到职员列表-->
            <result name="addOrEditStaff" type="redirectAction">
                <param name="actionName">staffAction_listStaff</param>
            </result>

            <!--编辑职员跳转页面-->
            <result name="editStaff">/pages/staff/{1}.jsp</result>

            <!--返回职员列表-->
            <result name="returnListStaff" type="redirectAction">
                <param name="actionName">staffAction_listStaff</param>
            </result>

            <!--高级查询-->
            <result name="findStaffWithMsg" type="json">
                <param name="root">returnStaffs</param>
                <param name="includeProperties">
                    \[\d\]\.staffName,
                    \[\d\]\.gender,
                    \[\d\]\.onDutyDate,
                    \[\d\]\.post\.department\.depName,
                    \[\d\]\.post\.postName
                </param>
            </result>

            <!--部门和职务的二级联动-->
            <result name="success" type="json">
                <!--指定需要转化为json数据的数据类型-->
                <param name="root">postList</param>
                <!--需要转为json数据的参数-->
                <param name="includeProperties">
                    \[\d\]\.postID,
                    \[\d\]\.postName
                </param>
            </result>

            <allowed-methods>
                listStaff,findPost,addOrEditStaff,editStaff,returnListStaff,findStaffWithMsg
            </allowed-methods>
        </action>

    </package>

</struts>
